{
    "name": "python-class-navigator",
    "displayName": "Python Class Navigator",
    "description": "Navigate between parent and child classes with gutter icons",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "python-class-navigator.navigateToImplementations",
        "title": "Python: Navigate to Implementations"
      },
      {
        "command": "python-class-navigator.navigateToSuperclass",
        "title": "Python: Navigate to Superclass"
      },
      {
        "command": "python-class-navigator.handleIconClick",
        "title": "Python: Navigate via Icon"
      },
      {
        "command": "python-class-navigator.iconClick",
        "title": "Python: Click Icon to Navigate"
      }
    ],
    "keybindings": [
      {
        "command": "python-class-navigator.iconClick",
        "key": "alt+enter",
        "mac": "alt+enter",
        "when": "editorTextFocus && editorLangId == python"
      }
    ]
  },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "typescript": "^5.0.0"
    }
}
